@model Order
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RsvpForm</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>

<form method="post" asp-action="Checkout">
    <h3>
        <i class="bi bi-person-circle"></i>
        Personal Details
    </h3>

    <div class="form-group">
        <label asp-for="Name"></label><input asp-for="Name" class="form-control" />
        @*<span asp-validation-for="Name"></span>*@
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label><input asp-for="Phone" class="form-control" />
        @*<span asp-validation-for="Phone"></span>*@
    </div>

    <h3 class="pt-4">
        <i class="bi bi-truck"></i>
        Shipping Details
    </h3>

    <div class="form-group">
        <label asp-for="AddressLine"></label><input asp-for="AddressLine" class="form-control" />
        @*<span asp-validation-for="AddressLine"></span>*@
    </div>
    <div >
        <div class="form-group">
            <label asp-for="Region">Region</label>
            <input type="text" asp-for="Region" class="form-control"/>
            @*<span asp-validation-for="Region"></span>*@
        </div>

        <div class="form-group">
            <label asp-for="City">City</label>
            <input type="text" asp-for="City" class="form-control"/>
            @*<span asp-validation-for="City" class="text-danger"></span>*@
        </div class="form-group">

        <div class="form-group">
            <label asp-for="PostalCode"></label>
            <input type="text" asp-for="PostalCode" class="form-control"/>
            @*<span asp-validation-for="PostalCode"></span>*@
        </div>
    </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    <div class="text-center pt-3">
         <button class="btn btn-primary" type="submit">PURCHASE</button>
         <button class="btn btn-primary" asp-page="/Cart">BACK TO CART"</button>
     </div>
</form>
@section scripts{
    <script src = "~/lib/jquery-validation/dist/jquery.validate.min.js" ></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script> 
}
</body>
</html>